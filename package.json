{
  "name": "hono-template",
  "type": "module",
  "scripts": {
    "dev": "tsx watch --env-file=./.env ./src/index.ts",
    "build": "tsc --noEmit && esbuild ./src/index.ts --bundle --platform=node --outfile=./dist/index.mjs --format=esm",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\"",
    "migrate": "PG_URL=${PG_URL} node --experimental-default-type=module ./migrate.js",
    "prepare": "husky",
    "ts:check": "tsc --noEmit",
    "test": "TZ=UTC vitest run -c ./vitest.config.ts",
    "test:coverage": "TZ=UTC vitest run -c ./vitest.config.ts --coverage",
    "test:watch": "TZ=UTC vitest -c ./vitest.config.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.12.2",
    "@hono/prometheus": "^1.0.1",
    "@hono/zod-openapi": "^0.16.0",
    "@hono/zod-validator": "^0.2.2",
    "hono": "^4.5.10",
    "hono-rate-limiter": "^0.4.0",
    "oslo": "^1.2.1",
    "postgres": "^3.4.4",
    "prom-client": "^15.1.3",
    "ulid": "^2.3.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.14.8",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vitest/coverage-v8": "^2.0.5",
    "esbuild": "^0.23.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.9",
    "postgres-shift": "^0.1.0",
    "prettier": "^3.3.3",
    "tsx": "^4.7.1",
    "typescript": "^5.5.4",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.0.5"
  },
  "engines": {
    "node": ">=20.14.8",
    "pnpm": ">=9"
  }
}
